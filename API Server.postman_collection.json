		{
			"name": "/user",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"if(pm.response.code === 401){\r",
							"    pm.sendRequest({\r",
							"    url: pm.collectionVariables.get('URL')+\"/api/v1/auth/refresh\",\r",
							"    method: 'GET',\r",
							"    header: {\r",
							"        'Authorization':'Bearer '+pm.collectionVariables.get('REFRESH_TOKEN'),\r",
							"        'x-api-key':pm.collectionVariables.get('API_KEY'),\r",
							"        'device-token':pm.collectionVariables.get('DEVICE_TOKEN'),\r",
							"        }\r",
							"}, function (err, response) {\r",
							"    console.log(response.json())\r",
							"        if(!err){\r",
							"            pm.collectionVariables.set('ACCESS_TOKEN', response.json().tokens.accessToken)\r",
							"            pm.collectionVariables.set('REFRESH_TOKEN', response.json().tokens.refreshToken)\r",
							"        }\r",
							"        else{\r",
							"            console.log(err)\r",
							"        }\r",
							"    });\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "x-api-key",
						"value": "{{API_KEY}}",
						"type": "text"
					},
					{
						"key": "device-token",
						"value": "{{DEVICE_TOKEN}}",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{ACCESS_TOKEN}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{URL}}/api/v1/user",
					"host": [
